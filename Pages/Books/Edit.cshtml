@page
@model LePetitRedu.Pages.Books.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Book.BookId" />
            <div class="form-group">
                <label asp-for="Book.Title" class="control-label"></label>
                <input asp-for="Book.Title" class="form-control" />
                <span asp-validation-for="Book.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.ParutionDate" class="control-label"></label>
                <input asp-for="Book.ParutionDate" class="form-control" />
                <span asp-validation-for="Book.ParutionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Format" class="control-label"></label>
                <input asp-for="Book.Format" class="form-control" />
                <span asp-validation-for="Book.Format" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.SerieId" class="control-label"></label>
                <select asp-for="Book.SerieId" class="form-control" asp-items="ViewBag.SerieId"></select>
                <span asp-validation-for="Book.SerieId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Read" class="control-label"></label>
                <select asp-for="Book.Read" class="form-control"></select>
                <span asp-validation-for="Book.Read" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Book.Possessed" /> @Html.DisplayNameFor(model => model.Book.Possessed)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
